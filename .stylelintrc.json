{
  "extends": "stylelint-config-standard",
  "rules": {
    "selector-type-no-unknown": null,
    "at-rule-no-unknown": [true, { "ignoreAtRules": ["machine"] }],
    "function-no-unknown": [true, { "ignoreFunctions": ["machine", "do"] }],
    "selector-pseudo-class-no-unknown": [true, { "ignorePseudoClasses": ["toggle"] }],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "toggle",
          "toggle-root",
          "toggle-trigger",
          "toggle-visibility"
        ]
      }
    ],
    "media-feature-range-notation": ["prefix"]
  }
}
