{
  "name": "css-toggles",
  "version": "0.0.1",
  "type": "module",
  "main": "src/css-toggles.js",
  "module": "src/css-toggles.js",
  "scripts": {
    "build:iife:minified": "esbuild --bundle src/css-toggles.js --outfile=dist/css-toggles.iife.min.js --format=iife --minify",
    "build:esm:minified": "esbuild --bundle src/css-toggles.js --outfile=dist/css-toggles.min.js --format=esm --minify",
    "build:esm:debug": "esbuild --bundle src/css-toggles.js --outfile=dist/css-toggles.js --format=esm",
    "build": "rm -rf dist && npm run build:esm:debug && npm run build:esm:minified && npm run build:iife:minified",
    "dev": "rm -rf dist && esbuild --bundle src/css-toggles.js --format=esm --servedir=. --outdir=dist --serve=3000 --sourcemap=inline",
    "format:css": "stylelint --fix src/**/*.css",
    "format:js": "prettier --write src/**/*.js",
    "format": "npm run format:css && npm run format:js",
    "lint:css": "stylelint src/**/*.css",
    "lint:js": "prettier --check src/**/*.js",
    "lint": "npm run lint:css && npm run lint:js"
  },
  "devDependencies": {
    "esbuild": "^0.14.36",
    "prettier": "^2.6.2",
    "stylelint": "^14.7.1",
    "stylelint-config-standard": "^25.0.0"
  },
  "dependencies": {
    "stylis": "^4.1.0"
  }
}
