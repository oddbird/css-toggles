{
  "name": "css-toggles",
  "version": "0.0.1",
  "type": "module",
  "main": "index.js",
  "module": "index.js",
  "scripts": {
    "dev": "superstatic --host 0.0.0.0 --port 3000",
    "build:iife:minified": "esbuild --bundle ./index.js --outfile=dist/css-toggles.iife.min.js --format=iife --minify",
    "build:esm:minified": "esbuild --bundle ./index.js --outfile=dist/css-toggles.min.js --format=esm --minify",
    "build:esm:debug": "esbuild --bundle ./index.js --outfile=dist/css-toggles.js --format=esm",
    "build": "npm run build:esm:debug && npm run build:esm:minified && npm run build:iife:minified"
  },
  "devDependencies": {
    "esbuild": "^0.14.36",
    "superstatic": "^7.1.0"
  }
}
